# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Run tests"
  lane :test do
    scan(
      scheme: "Cheffy",
      device: "iPhone 16",
      clean: true,
      code_coverage: true,
      output_directory: "fastlane/test_output",
      output_style: "raw"
    )
  end

  desc "Build for release"
  lane :build do
    gym(
      scheme: "Cheffy",
      configuration: "Release",
      clean: true,
      output_directory: "fastlane/build_output",
      output_name: "Cheffy.ipa"
    )
  end

  desc "Deploy to TestFlight"
  lane :beta do
    # Ensure we're on main branch
    ensure_git_branch(branch: 'main')
    
    # Increment build number
    increment_build_number(
      build_number: latest_testflight_build_number + 1,
      xcodeproj: "Cheffy.xcodeproj"
    )
    
    # Build and upload to TestFlight
    build_app(
      scheme: "Cheffy",
      configuration: "Release",
      export_method: "app-store",
      export_options: {
        method: "app-store",
        provisioningProfiles: {
          "com.cheffy.app" => "match AppStore com.cheffy.app"
        }
      }
    )
    
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  desc "Deploy to App Store"
  lane :release do
    # Ensure we're on main branch
    ensure_git_branch(branch: 'main')
    
    # Ensure clean git status
    ensure_git_status_clean
    
    # Increment version and build number
    increment_version_number(
      version_number: latest_app_store_version_number,
      xcodeproj: "Cheffy.xcodeproj"
    )
    
    increment_build_number(
      build_number: latest_app_store_build_number + 1,
      xcodeproj: "Cheffy.xcodeproj"
    )
    
    # Build and upload to App Store
    build_app(
      scheme: "Cheffy",
      configuration: "Release",
      export_method: "app-store",
      export_options: {
        method: "app-store",
        provisioningProfiles: {
          "com.cheffy.app" => "match AppStore com.cheffy.app"
        }
      }
    )
    
    upload_to_app_store(
      force: true,
      skip_metadata: true,
      skip_screenshots: true
    )
  end

  desc "Setup certificates and provisioning profiles"
  lane :setup_certificates do
    match(
      type: "development",
      readonly: true
    )
    
    match(
      type: "appstore",
      readonly: true
    )
  end

  desc "Update provisioning profiles"
  lane :update_profiles do
    match(
      type: "development",
      force_for_new_devices: true
    )
    
    match(
      type: "appstore",
      force_for_new_devices: true
    )
  end
end 